@using EntityLayer.Concrete
@model List<Title>
@{
    ViewBag.Title = "AllTitles";
    Layout = "~/Views/Shared/_AuthorLayout.cshtml";
}



<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-8">
                <h1>Projects</h1>
            </div>
           
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h1 class="card-title">Konu Başlıkları</h1>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body p-0">
            <table class="table table-striped projects">
                <thead>
                    <tr>

                        <th style="width: 20%">
                            Başlık
                        </th>
                        <th style="width: 30%">
                            Yazar
                        </th>

                        <th style="width: 8%" class="text-center">
                            Kategori
                        </th>
                        <th style="width: 20%">
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var title in Model)
                    {


                        <tr>

                            <td>
                                <a>
                                    @title.Name
                                </a>
                                <br />
                                <small>
                                    @title.Date.ToShortDateString()
                                </small>
                            </td>
                            <td>
                                @title.Author.Name @title.Author.LastName
                            </td>

                            <td class="project-state">
                                <span class="badge badge-success">@title.Category.Name</span>
                            </td>
                            <td class="project-actions text-right">
                                <a class="btn btn-primary btn-sm" href="/Default/Titles/@title.Id">
                                    <i class="fas fa-folder">
                                    </i>
                                    Detay
                                </a>
                                <a class="btn btn-info btn-sm" href="/AuthorPanelContent/AddContent/@title.Id">
                                    <i class="fas fa-pencil-alt">
                                    </i>
                                    Bu Başlığa Yaz
                                </a>
                           
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
