
@{
    Layout = null;
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/AdminLTE-3.0.4/dist/css/styles.css" rel="stylesheet" />
    <link href="~/AdminLTE-3.0.4/dist/css/userLogin.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/js/all.min.js" crossorigin="anonymous"></script>
    <title>Index</title>
</head>
<body>

    <div>
        <div class="container mt-5">
            <div class="row justify-content-center">
                <div class="col-lg-5">
                    <div class="card shadow-lg border-0 rounded-lg mt-5">
                        <div class="card-header"><h3 class="text-center font-weight-light my-4"><span class="fas fa-door-open"></span> Yazar Giriş</h3></div>
                        <div class="card-body">

                            @using (Html.BeginForm("AuthorLogin", "Login", FormMethod.Post))
                            {
                                <div class="form-group">
                                    <label class="small mb-1"></label>
                                    <input class="form-control py-4" type="email" name="Mail" placeholder="Lütfen e-posta adresinizi giriniz." required />

                                </div>
                                <div class="form-group">
                                    <label class="small mb-1"></label>
                                    <input class="form-control py-4" type="password" name="Password" placeholder="Lütfen şifrenizi giriniz." required />

                                </div>
                                <div class="text-danger">@Html.ValidationMessage("PasswordOrUserNameError")</div>
                                <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                                    <a class="btn btn-secondary text-white"><span class="fas fa-user-lock"></span> Şifremi Unuttum</a>
                                    <button class="btn btn-primary" type="submit"><span class="fas fa-sign-in-alt"></span> Giriş Yap</button>
                                   
                                </div>



                            }



                        </div>
                        <div class="card-footer text-center row">
                            <div class="col-md-12">
                                <a class="btn btn-success btn-block text-white"><span class="fas fa-home"></span> Anasayfaya Dön</a>
                            </div>   
                            
                            <a class="btn btn-info btn-block text-white mt-3" href="/Login/Index"><span class="fas fa-door-closed"></span> Admin Girişi</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </div>
</body>
</html>

<script src="https://code.jquery.com/jquery-3.5.1.min.js" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
<script src="~/AdminLTE-3.0.4/dist/js/scripts.js"></script>