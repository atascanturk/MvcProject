@using EntityLayer.Concrete
@model List<About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Hakkında Veri Listesi</h2>
<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Aktif Yap</th>
        <th>Pasif Yap</th>
    </tr>

    @foreach (var about in Model)
    {
<tr>
    <td>@about.Id</td>
    <td>@about.Details1</td>
    <td><a href="#" class="btn btn-success">Aktif Yap</a></td>
    <td><a href="#" class="btn btn-danger">Pasif Yap</a></td>
</tr>
    }
</table>
<button class="btn btn-primary" data-toggle="modal" data-target="#Modal1">Yeni Hakkımızda Yazı Girişi</button>



@Html.Action("AboutPartial","About")