

<div class="col-md-3">
    <a href="/AuthorPanelMessage/NewMessage" class="btn btn-primary btn-block mb-3">Yeni Mesaj</a>
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Folders</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body p-0">
            <ul class="nav nav-pills flex-column">

               

                <li class="nav-item active">
                    <a href="/AuthorPanelMessage/Inbox/" class="nav-link">
                        <i class="fas fa-inbox"></i> Gelen
                        <span class="badge bg-primary float-right">@ViewBag.MessageCount</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/AuthorPanelMessage/SentMessages/" class="nav-link">
                        <i class="far fa-envelope"></i> Gönderilen
                        <span class="badge bg-primary float-right">@ViewBag.SentMessagesCount</span>

                    </a>
                </li>

                <li class="nav-item">
                    <a href="/AuthorPanelMessage/GetNotSeenMessages" class="nav-link">
                        <i class="far fa-file-alt"></i> Okunmamış Mesajlar
                        <span class="badge bg-primary float-right">@ViewBag.NotSeen</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a href="/AuthorPanelMessage/GetDraftMessages" class="nav-link">
                        <i class="far fa-file-alt"></i> Taslaklar
                        <span class="badge bg-primary float-right">@ViewBag.DraftMessagesCount</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="far fa-trash-alt"></i> Çöp Kutusu
                    </a>
                </li>
            </ul>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Diğer</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body p-0">
            <ul class="nav nav-pills flex-column">
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="far fa-circle text-danger"></i>
                        Önemli
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="far fa-circle text-warning"></i> Tanıtımlar
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="far fa-circle text-primary"></i>
                        Sosyal Medya
                    </a>
                </li>
            </ul>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</div>

