@using EntityLayer.Concrete
@model List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered mt-2">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>Kategori Açıklaması</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Başlıklar</th>
    </tr>

    @foreach (var category in Model)
    {
        <tr>
            <td>@category.Id  </td>
            <td>@category.Name  </td>
            <td>@category.Description  </td>
            <td><a href="/AdminCategory/DeleteCategory/@category.Id" class="btn btn-danger">Sil</a></td>
            <td><a href="/AdminCategory/UpdateCategory/@category.Id" class="btn btn-warning">Güncelle</a></td>
            <td><a href="#" class="btn btn-primary">Başlıklar</a></td>


        </tr>
    }

</table>
<a href="/AdminCategory/AddCategory" class="btn btn-info">Yeni Kategori</a>


